<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
  <item android:id="@android:id/background" android:drawable="@drawable/monitor_flow_detail_progress_bg" />
  <item android:id="@android:id/progress" android:drawable="@drawable/monitor_flow_detail_progress" />
    -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerY="0.75"
                android:endColor="#D6D7DA"
                android:startColor="#E6E7E7" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#165CBC"
                    android:startColor="#85B0E9" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerY="0.75"
                    android:endColor="#4AC5FA"
                    android:startColor="#2BBBF9" />
            </shape>
        </clip>
    </item>

</layer-list>